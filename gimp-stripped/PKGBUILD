# Maintainer: mrdotx <klassiker@gmx.de>
_pkgname=gimp
pkgname=gimp-stripped
pkgdesc='GNU Image Manipulation Program (stripped from most unnecessary dependencies)'
pkgver=3.0.8
pkgrel=1
url='https://www.gimp.org'
arch=('x86_64')
license=('GPL-3.0-or-later')
makedepends=(
    #'alsa-lib'
    #'bash-completion'
    #'cfitsio'
    #'ghostscript'
    #'gi-docgen'
    #'gjs'
    'glib2-devel'
    'glibc-locales'
    'gobject-introspection'
    #'gtk-doc'
    #'gvfs'
    'intltool'
    'libxslt'
    'meson'
    'python-gobject'
    'qoi'
    #'vala'
)
depends=(
    # core deps
    'appstream'
    'babl'
    #'cairo'
    #'fontconfig'
    #'freetype2'
    #'gcc-libs'
    #'gdk-pixbuf2'
    'gegl'
    #'glib2'
    #'glibc'
    'gtk3'
    #'harfbuzz'
    #'hicolor-icon-theme'
    #'iso-codes'
    #'json-glib'
    #'lcms2'
    'libgexiv2'
    #'libmypaint'
    #'libunwind'
    'mypaint-brushes1'
    #'pango'
    #'python-gobject'
    #'zlib'

    # plugins deps
    #'aalib'
    #'bzip2'
    #'libgudev'
    #'libheif'
    #'libjpeg-turbo'
    #'libjxl'
    #'libmng'
    #'libpng'
    #'librsvg'
    #'libtiff'
    #'libwebp'
    #'libwmf'
    #'libx11'
    #'libxcursor'
    #'libxext'
    #'libxfixes'
    'libxmu'
    #'libxpm'
    #'openexr'
    #'openjpeg2'
    'poppler-data'
    'poppler-glib'
    #'xz'
)
optdepends=(
    'alsa-lib: for MIDI event controller module'
    'bash-completion: for bash completion support'
    'cfitsio: for FITS support'
    'ghostscript: for PostScript support'
    'gjs: for JavaScript scripting support'
    'gutenprint: for sophisticated printing only as gimp has built-in cups print support'
    'gvfs: for HTTP/S support (and many other schemes)'
)
provides=("$_pkgname")
conflicts=("$_pkgname")
_archive="$_pkgname-$pkgver"
source=(
    https://download.gimp.org/gimp/v${pkgver%.*}/$_archive.tar.xz
)
b2sums=('327aa7833406bd09d7b36ef5ee59a1c65766ab3faa5085507af4b215688cba659be135a95a4980ee44b95fdfad47bf15fb5ec61e62156761302ba996cc4cd233')

prepare() {
    cd "$_archive"
}

build() {
    local meson_options=(
        --buildtype=plain
        --prefix=/usr
        --sysconfdir=/etc
        --libexecdir=/usr/bin

        # build properties
        #-Denable-console-bin=false # TODO: build error
        -Dcheck-update=no
        -Dbug-report-url='https://github.com/mrdotx/pkgbuilds/issues'
        #-Dlibunwind=false # TODO: build error
        -Dlibbacktrace=false

        # features
        -Denable-default-bin=enabled
        -Dbash-completion=disabled
        -Daa=disabled
        -Dalsa=disabled
        -Dappdata-test=disabled
        -Dcairo-pdf=disabled
        -Dfits=disabled
        -Dghostscript=disabled
        -Dgudev=disabled
        -Dheif=disabled
        -Dilbm=disabled
        -Djpeg2000=disabled
        -Djpeg-xl=disabled
        -Dmng=disabled
        -Dopenexr=disabled
        -Dopenmp=enabled
        -Dprint=false
        -Dwebkit-unmaintained=false
        -Dwebp=disabled
        -Dwmf=disabled
        -Dxcursor=disabled
        -Dxpm=disabled
        -Dheadless-tests=disabled
        -Dfile-plug-ins-test=false
        -Dcan-crosscompile-gir=false
        -Dgi-docgen=disabled
        -Dlinux-input=disabled
        -Dvector-icons=true
        -Dvala=disabled
        -Djavascript=disabled
        -Dlua=false
        -Ddebug-self-in-build=false
    )

    arch-meson "$_archive" build "${meson_options[@]}"
    meson compile -C build
}

package() {
    meson install -C build --destdir "$pkgdir"
}
